<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clipboard Sync"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sincroniza tu portapapeles con tu PC"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#252540"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/status_disconnected" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado: Desconectado"
                    android:textColor="#ff6b6b"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Server Configuration Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#252540"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ ConfiguraciÃ³n del Servidor"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DirecciÃ³n IP del PC"
                    android:textColor="#aaaaaa"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editServerIp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="192.168.1.100"
                    android:inputType="text"
                    android:paddingHorizontal="16dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#666666"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puerto"
                    android:textColor="#aaaaaa"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editServerPort"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="8765"
                    android:inputType="number"
                    android:paddingHorizontal="16dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#666666"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <CheckBox
                    android:id="@+id/checkAutoStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciar automÃ¡ticamente"
                    android:textColor="#aaaaaa"
                    android:buttonTint="#4ecdc4"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ’¾ Guardar ConfiguraciÃ³n"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_secondary"
                    android:textAllCaps="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Connect Button -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="â–¶ï¸ Conectar"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />

        <!-- Test Section Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#252540"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§ª Pruebas"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnTestCopy"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ“‹ Copiar"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_test"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnTestPaste"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ“„ Ver"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_test"
                        android:textAllCaps="false"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textClipboardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clipboard_content_background"
                    android:padding="12dp"
                    android:textColor="#cccccc"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Instrucciones:\n1. Ejecuta el servidor en tu PC\n2. Ingresa la IP mostrada en el servidor\n3. Presiona Conectar\n4. Â¡Listo! Copia algo en cualquier dispositivo"
            android:textColor="#666666"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>
